<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/item_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorite_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/item_title"
        app:layout_constraintTop_toTopOf="@id/favorite_button"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/internet_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_describe"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/internet_image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/internet_image"
        android:src="@drawable/ic_internet"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintBottom_toTopOf="@id/item_describe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_page"
        android:text="@string/item_page"
        app:layout_constraintTop_toTopOf="@id/internet_image"
        app:layout_constraintStart_toEndOf="@id/internet_image"
        app:layout_constraintBottom_toBottomOf="@id/internet_image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_image"
        android:src="@drawable/ic_map"
        app:layout_constraintTop_toTopOf="@id/internet_image"
        app:layout_constraintStart_toEndOf="@id/item_page"
        app:layout_constraintBottom_toBottomOf="@id/internet_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_map"
        android:text="@string/item_map"
        app:layout_constraintTop_toTopOf="@id/internet_image"
        app:layout_constraintStart_toEndOf="@id/map_image"
        app:layout_constraintBottom_toBottomOf="@id/internet_image" />

</androidx.constraintlayout.widget.ConstraintLayout>